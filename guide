
echo "What do you need help with?"
echo 
echo "1.    Active Directory"
echo "2.    SID Formating"
echo "3.    XML"
echo "4.    Crontab"
echo "5.    /etc/passwd Formating"
echo "6.    syslog"
echo "7.    xpath"
echo "0.    Nevermind"
read $i

if [ $i > 0 ]
then
    if [$i == 1]
    then
        less ./Active-Directory.txt
    
    elif [$i == 2 ]
    then
        less ./SID-format.txt
        
    elif [$i == 3 ]
    then
        less ./XML-XPATH.txt
        
    elif [$i == 4 ]
    then
        less ./crontab.txt
    
    elif [$i == 5 ]
    then
        less ./passwd-format.txt
    
    elif [$i == 6 ]
    then
        less ./syslog.txt
        
    elif [$i == 7 ]
    then
        less ./xpath.txt
    fi
else
    echo "Alrighty, have a good day!"
fi
